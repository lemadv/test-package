#!/bin/sh

# Regex to validate commit message format
regex="^(\w+)\((.+?)\):\s*(.+)$"

# Read the commit message from the provided file
commit_message=$(cat "$1")

# Validate the commit message against the regex
if ! echo "$commit_message" | grep -qE "$regex"; then
  echo "❌ Invalid commit message format."
  echo ""
  echo "Expected format: type(component): description"
  echo "Example: feat(button): Add ripple effect"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid."
